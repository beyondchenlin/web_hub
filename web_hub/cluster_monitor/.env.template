# 集群监控系统环境配置模板
# ==========================================
# 复制此文件为 .env 并修改实际配置值
# 警告：请勿将包含真实密码的 .env 文件提交到代码仓库
# ==========================================

# ===========================================
# 基本配置
# ===========================================
CHECK_INTERVAL=10
FORUM_MONITORING_ENABLED=true
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# 任务分发策略
# 可选值: least_busy, priority, round_robin
TASK_DISPATCH_STRATEGY=least_busy

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/forum_monitor.log

# 机器配置文件
MACHINES_CONFIG_FILE=machines.txt

# Web界面配置
WEB_REFRESH_INTERVAL=10

# ===========================================
# 论坛监控配置（独立运行必需）
# ===========================================

# 🔧 基础配置
FORUM_ENABLED=true
FORUM_CHECK_INTERVAL=10

# 🌐 论坛网站配置
FORUM_BASE_URL=https://aicut.lrtcai.com
FORUM_TARGET_URL=https://aicut.lrtcai.com/forum-2-1.html

# 🔒 敏感信息配置（请修改为实际值）
FORUM_USERNAME=your_username_here
FORUM_PASSWORD=your_secure_password_here

FORUM_TARGET_FORUM_ID=2

# ⚙️ 功能配置
FORUM_AUTO_REPLY_ENABLED=true
FORUM_TEST_MODE=false
FORUM_TEST_ONCE=false

# 🔄 兼容性配置（支持多种环境变量名）
AICUT_ADMIN_USERNAME=your_username_here
AICUT_ADMIN_PASSWORD=your_secure_password_here

# 🕷️ 爬虫模式配置
CRAWLER_MODE=PRODUCTION
MIN_CHECK_INTERVAL=10
MAX_CHECK_INTERVAL=10
MAX_POSTS_TO_PROCESS=50

# ===========================================
# 安全说明
# ===========================================
# 1. 复制此文件为 .env：cp .env.template .env
# 2. 修改 FORUM_USERNAME 和 FORUM_PASSWORD 为实际值
# 3. 确保密码强度：至少8位，包含字母数字组合
# 4. 不要将 .env 文件提交到代码仓库
# 5. 定期更换密码提高安全性
# ===========================================